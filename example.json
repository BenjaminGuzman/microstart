{
    "$schema": "https://raw.githubusercontent.com/BenjaminGuzman/microstart/main/src/main/resources/schema.json",
    "services": [
        {
            "name": "Search engine",
            "start": "ping -c 2 duckduckgo.com",
            "aliases": ["search", "duckduckgo"],
            "color": "0x00ff00",
            "startedPatterns": ["0% packet loss"],
            "errorPatterns": ["([1-9][0-9]?|100)% packet loss"]
        },
        {
            "name": "Users",
            "start": "echo \"Loading service...\" && sleep 1 && echo \"Config loaded\" && sleep 1 && echo \"RPC server is listening on port 1111\"",
            "aliases": ["rpc-users", "users"],
            "color": "0xff00ff",
            "startedPatterns": ["(Service|Server) is listening"]
        },
        {
            "name": "Crypto",
            "aliases": ["crypto"],
            "start": "echo \"...\" && sleep 1 && echo \"Done.\"",
            "color": "0xff0000",
            "startedPatterns": ["done"]
        },
        {
            "name": "Landing page",
            "aliases": ["landing"],
            "start": "sleep 5 && echo \"Compilation finished.\"",
            "startedPatterns": ["Compilation finished"]
        }
    ],
    "groups": [
        {
            "name": "Frontend services",
            "aliases": ["frontend"],
            "services": ["landing"],
            "dependencies": ["backend"]
        },
        {
            "name": "Backend services",
            "aliases": ["backend"],
            "services": ["crypto", "users"],
            "dependencies": ["databases"]
        },
        {
            "name": "Databases",
            "aliases": ["databases"],
            "services": ["duckduckgo"]
        }
    ]
}